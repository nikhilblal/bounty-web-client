rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Task images - uploaded when creating a task
    match /task-images/{imageId} {
      // Anyone can read task images (public bounty board)
      allow read: if true;

      // Only authenticated users can upload task images
      allow write: if isAuthenticated() &&
        // Limit file size to 5MB
        request.resource.size < 5 * 1024 * 1024 &&
        // Only allow image files
        request.resource.contentType.matches('image/.*');
    }

    // Proof images - uploaded when completing a task
    match /proof-images/{imageId} {
      // Anyone can read proof images (for validation)
      allow read: if true;

      // Only authenticated users can upload proof images
      allow write: if isAuthenticated() &&
        // Limit file size to 5MB
        request.resource.size < 5 * 1024 * 1024 &&
        // Only allow image files
        request.resource.contentType.matches('image/.*');
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
